# Rails Configuration
RAILS_ENV=development
SECRET_KEY_BASE=your-secret-key-base-change-in-production
RAILS_MAX_THREADS=20

# Database Configuration  
DATABASE_URL=postgresql://cryptopay:cryptopay123@localhost:5432/cryptopay_development
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=cryptopay
DB_PASSWORD=cryptopay123

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Devise Configuration
DEVISE_SECRET_KEY=your-devise-secret-key-change-in-production

# Two-Factor Authentication
OTP_SECRET_ENCRYPTION_KEY=your-32-character-otp-encryption-key

# Blockchain Configuration
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USER=bitcoin
BITCOIN_RPC_PASSWORD=bitcoin123

ETHEREUM_NODE_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key

# External API Keys
BLOCKCYPHER_API_KEY=your-blockcypher-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@cryptopay.com
SMTP_PASSWORD=your-app-password
SMTP_DOMAIN=cryptopay.com
SMTP_FROM=noreply@cryptopay.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
MAX_WEBHOOK_ATTEMPTS=3
WEBHOOK_TIMEOUT_SECONDS=30

# Rate Limiting (Rack Attack)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_API_REQUESTS_PER_MINUTE=1000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,https://yourdomain.com

# ActiveAdmin
ADMIN_EMAIL=admin@cryptopay.com
ADMIN_PASSWORD=admin123

# Sidekiq
SIDEKIQ_CONCURRENCY=10
SIDEKIQ_TIMEOUT=25

# Business Logic Configuration
MIN_CONFIRMATION_BTC=3
MIN_CONFIRMATION_ETH=12
MIN_CONFIRMATION_USDT=12

PROCESSING_FEE_BTC=0.005
PROCESSING_FEE_ETH=0.003
PROCESSING_FEE_USDT=0.002

# Cold Storage Thresholds (move to cold storage when exceeded)
COLD_STORAGE_THRESHOLD_BTC=1.0
COLD_STORAGE_THRESHOLD_ETH=10.0
COLD_STORAGE_THRESHOLD_USDT=10000.0

# Auto-conversion Settings
ENABLE_AUTO_CONVERSION=true
DEFAULT_FIAT_CURRENCY=USD
CONVERSION_SLIPPAGE_TOLERANCE=0.01

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
ENABLE_PROMETHEUS_METRICS=true

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key  
AWS_REGION=us-east-1
S3_BUCKET_NAME=cryptopay-uploads

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_LETTER_OPENER=true
BULLET_ENABLED=false
